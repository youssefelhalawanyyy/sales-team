rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userRole() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
        : null;
    }

    function isAdmin() {
      return userRole() == 'admin';
    }

    function isSalesManager() {
      return userRole() == 'sales_manager';
    }

    function isTeamLeader() {
      return userRole() == 'team_leader';
    }

    function userTeamId() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId
        : null;
    }
    match /users/{userId} {
      allow read: if request.auth.uid == userId || request.auth.uid != null;
      allow write: if request.auth.uid == userId || request.auth != null;
      allow create: if request.auth != null;
    }

    match /finances/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /sales/{document=**} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        isSalesManager() ||
        resource.data.ownerId == request.auth.uid ||
        resource.data.createdBy == request.auth.uid ||
        (resource.data.sharedWith != null && request.auth.uid in resource.data.sharedWith) ||
        (resource.data.teamId != null && resource.data.teamId == userTeamId())
      );

      allow create: if isSignedIn() && (
        isAdmin() ||
        isSalesManager() ||
        request.resource.data.ownerId == request.auth.uid ||
        request.resource.data.createdBy == request.auth.uid
      );

      allow update, delete: if isSignedIn() && (
        isAdmin() ||
        isSalesManager() ||
        resource.data.ownerId == request.auth.uid ||
        resource.data.createdBy == request.auth.uid ||
        (isTeamLeader() && resource.data.teamId != null && resource.data.teamId == userTeamId())
      );
    }

    match /teams/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /teamMembers/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /achievements/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /deals/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isSalesManager();
    }

    match /notifications/{notificationId} {
      // Read rules - users can read their own notifications
      allow read: if 
        request.auth != null && (
          // Users can read their own notifications
          resource.data.userId == request.auth.uid ||
          // Admins can read all notifications
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );

      // Create rules - anyone can create notifications
      allow create: if request.auth != null;

      // Update rules - users can update their own notifications
      allow update: if 
        request.auth != null && (
          // Users can update their own notifications (mark read, delete)
          resource.data.userId == request.auth.uid ||
          // Admins can update any notification
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );

      // Delete rules - users can delete their own notifications
      allow delete: if 
        request.auth != null && (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }

    match /tasks/{taskId} {
      // Read rules
      allow read: if 
        request.auth != null && (
          // Users can read tasks assigned to them
          resource.data.assignedTo == request.auth.uid ||
          // Users can read tasks they created
          resource.data.createdBy == request.auth.uid ||
          // Admins can read all tasks
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );

      // Write rules for creating tasks
      allow create: if 
        request.auth != null && (
          // Admins can create tasks
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
          // Sales managers can create tasks
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales_manager' ||
          // Team leaders can create tasks
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'team_leader'
        );

      // Update rules
      allow update: if 
        request.auth != null && (
          // Task creator can update their own tasks
          resource.data.createdBy == request.auth.uid ||
          // Assigned user can submit/update status (partial update)
          (resource.data.assignedTo == request.auth.uid && 
           (request.resource.data.status != resource.data.status || 
            request.resource.data.submissions != resource.data.submissions ||
            request.resource.data.notes != resource.data.notes)) ||
          // Admins can update any task
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );

      // Delete rules (only creators and admins)
      allow delete: if 
        request.auth != null && (
          resource.data.createdBy == request.auth.uid ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
